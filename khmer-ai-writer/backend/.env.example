# Database
DATABASE_URL=postgresql://user:password@localhost:5432/khmer_ai_writer

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secrets
JWT_ACCESS_SECRET=please-change-this-access-secret
JWT_REFRESH_SECRET=please-change-this-refresh-secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Server
PORT=8080
NODE_ENV=development

# Rate Limiter
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# AWS S3 (for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-bucket-name

# ML Model Endpoints
ML_KHMER_LM_URL=http://localhost:5000
ML_KHMER_NER_URL=http://localhost:5001

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Khmer ML

# Stripe Payment (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Rate Limits (per plan)
RATE_LIMIT_FREE_DAILY=50
RATE_LIMIT_FREE_HOURLY=10
RATE_LIMIT_PREMIUM_DAILY=1000
RATE_LIMIT_PREMIUM_HOURLY=100
RATE_LIMIT_BUSINESS_DAILY=-1
RATE_LIMIT_BUSINESS_HOURLY=200
RATE_LIMIT_ENTERPRISE_DAILY=-1
RATE_LIMIT_ENTERPRISE_HOURLY=-1
